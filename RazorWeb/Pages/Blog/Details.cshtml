@page "/WatchBlog/{id:int}"
@model RazorWeb.Pages_Blog.DetailsModel

@{
    ViewData["Title"] = Model.Article.Title;    
}

<h1>@Model.Article.Title</h1>
<p><i>@Html.DisplayFor(model => model.Article.Created)</i></p>
<hr />
@* @Html.DisplayFor(model => model.Article.Content) *@
@Html.Raw(Model.Article.Content)
<hr />
<div class="mt-3">
    <a asp-page="./Edit" asp-route-id="@Model.Article.Id" class="btn btn-primary">Sửa</a>
    <a asp-page="./Index" class="btn btn-secondary">Quay lại danh sách bài viết</a>
</div>
