@model RazorWeb.Pages_Blog.DeleteModel

@{
    ViewData["Title"] = "Xoá";
}

<h1>Xoá</h1>

<h3>Bạn có chắc muốn xoá bài viết này?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Article.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Article.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Article.Created)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Article.Created)
