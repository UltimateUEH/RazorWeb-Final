@page "/admin/roles"
@model RazorWeb.Areas.Admin.Pages.Role.IndexModel
@{
    ViewData["Title"] = "Danh sách các vai trò (roles)";
}

<h2>@ViewData["Title"]</h2>

<partial name="_StatusMessage" model="@Model.StatusMessage"></partial>

<div class="mb-2">
    <a class="btn btn-primary" asp-page="./Create">Tạo vai trò mới</a>
    <a class="btn btn-primary" asp-page="../User/Index">Quản lý thành viên</a>
</div>

<table class="table">
    <tr>
        <th>Tên vai trò (role)</th>
        <th>Tác vụ</th>
    </tr>

    @foreach (var role in Model.roles)
    {
        <tr>
            <td>
                <p>@role.Name</p>

                @foreach (var claim in role.Claims)
                {
                    <small>@claim</small><br/>
                }
            </td>
            <td>
                <a class="btn btn-success" asp-page="./Edit" asp-route-roleid="@role.Id">Cập nhật</a>
                <a class="btn btn-danger" asp-page="./Delete" asp-route-roleid="@role.Id">Xoá</a>
            </td>
        </tr>
    }
</table>