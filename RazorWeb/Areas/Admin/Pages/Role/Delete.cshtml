@page "/admin/delete-role/{roleid}"
@model RazorWeb.Areas.Admin.Pages.Role.DeleteModel
@{
    ViewData["Title"] = "Xoá vai trò (roles)";
}

<h2>@ViewData["Title"]</h2>
<partial name="_StatusMessage" model="@Model.StatusMessage"></partial>

<hr />

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <p>Bạn có chắc chắn muốn xoá <strong>@Model.role.Name</strong></p>

            <div class="form-group">
                <input type="submit" value="Đồng ý" class="btn btn-danger mt-3" />
                <br />
                <a class="btn btn-secondary mt-2" asp-page="./Index">Danh sách các vai trò</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}